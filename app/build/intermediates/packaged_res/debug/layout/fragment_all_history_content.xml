<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- 固定ヘッダー -->
    <LinearLayout
        android:id="@+id/stickyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="2dp">

        <!-- 現在のセクション名と日付 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/currentSectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全て"
                android:textColor="@color/pink_500"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="start" />

            <TextView
                android:id="@+id/currentSectionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025年3月"
                android:textColor="#757575"
                android:textSize="12sp"
                android:alpha="0.8"
                android:gravity="end" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />
    </LinearLayout>

    <!-- スクロール可能なコンテンツ -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- 全てセクション -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F2F2F2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/sectionAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="全て"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/sectionAllDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年3月"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 最新の画像アイテム -->
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_wallpaper" />
            </androidx.cardview.widget.CardView>

            <!-- テンプレートセクション -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F2F2F2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/sectionTemplate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="テンプレート"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/sectionTemplateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年3月"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:gravity="end" />
            </LinearLayout>

            <!-- テンプレートアイテム -->
            <androidx.cardview.widget.CardView
                android:id="@+id/templateHeader"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- 画像 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_template" />
            </androidx.cardview.widget.CardView>

            <!-- ウィジェットセクション -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F2F2F2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/sectionWidget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ウィジェット"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/sectionWidgetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年2月"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:gravity="end" />
            </LinearLayout>

            <!-- ウィジェットアイテム -->
            <androidx.cardview.widget.CardView
                android:id="@+id/widgetHeader"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- 画像 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_widget" />
            </androidx.cardview.widget.CardView>

            <!-- アイコンセクション -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F2F2F2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/sectionIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="アイコン"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/sectionIconDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年2月"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:gravity="end" />
            </LinearLayout>

            <!-- アイコンアイテム -->
            <androidx.cardview.widget.CardView
                android:id="@+id/iconHeader"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- 画像 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_template" />
            </androidx.cardview.widget.CardView>
            
            <!-- 壁紙セクション -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F2F2F2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/sectionWallpaper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="壁紙"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/sectionWallpaperDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年2月"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 壁紙アイテム -->
            <androidx.cardview.widget.CardView
                android:id="@+id/wallpaperHeader"
                android:layout_width="75dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- 画像 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_wallpaper" />
            </androidx.cardview.widget.CardView>

            <!-- ロック画面セクション -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F2F2F2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/sectionLockscreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ロック画面"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/sectionLockscreenDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年2月"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:gravity="end" />
            </LinearLayout>

            <!-- ロック画面アイテム -->
            <androidx.cardview.widget.CardView
                android:id="@+id/lockscreenHeader"
                android:layout_width="75dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- 画像 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_wallpaper" />
            </androidx.cardview.widget.CardView>
            
            <!-- ライブ壁紙セクション -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F2F2F2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/sectionLiveWallpaper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ライブ壁紙"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/sectionLiveWallpaperDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年2月"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:gravity="end" />
            </LinearLayout>

            <!-- ライブ壁紙アイテム -->
            <androidx.cardview.widget.CardView
                android:id="@+id/liveWallpaperHeader"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- 画像 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_widget" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
