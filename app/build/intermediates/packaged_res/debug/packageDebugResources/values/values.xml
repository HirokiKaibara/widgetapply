<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="gray">#FF808080</color>
    <color name="light_gray">#F5F5F5</color>
    <color name="pink_200">#FFF48FB1</color>
    <color name="pink_500">#FFE91E63</color>
    <color name="pink_700">#FFC2185B</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="add_widget">ウィジェット追加</string>
    <string name="app_name">WidgetApply</string>
    <string name="widget_description">アプリケーションウィジェット</string>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/category_chip_text_color</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="CustomTabStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/pink_500</item>
        <item name="rippleColor">@color/pink_200</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.WidgetApply" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>